@{
    // 1. O anki Controller adını alıyoruz (Örn: "Work", "Skill", "Statistics")
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();

    // 2. CSS Sınıflarını Değişkenlere Atadık (Kod tekrarını önlemek için)

    // AKTİF (Seçili) Durum: Mavi arka plan, beyaz yazı
    var activeClass = "bg-primary text-white shadow-lg shadow-primary/20 hover:brightness-110";

    // PASİF (Seçili Değil) Durum: Gri yazı, hover olunca hafif gri arka plan
    var inactiveClass = "text-slate-600 hover:bg-slate-100 dark:text-slate-400 dark:hover:bg-slate-800/50 group";

    // HER İKİSİNDE ORTAK OLANLAR: Yuvarlak köşeler, padding, flex yapı
    var baseClass = "flex items-center gap-3 rounded-full px-4 py-3 transition-all";
}

<nav class="flex flex-col gap-2">

    <a asp-controller="Statistics"
       asp-action="StatisticsCards"
       class="@baseClass @(currentController == "Statistics" ? activeClass : inactiveClass)">

        <span class="material-symbols-outlined icon-fill">dashboard</span>
        <span class="text-sm font-semibold">Dashboard</span>
    </a>

    <a asp-controller="Work"
       asp-action="WorkList"
       class="@baseClass @(currentController == "Work" ? activeClass : inactiveClass)">

        <span class="material-symbols-outlined group-hover:text-primary transition-colors">folder_open</span>
        <span class="text-sm font-medium group-hover:text-slate-900 dark:group-hover:text-white">Projelerim</span>
    </a>

    <a asp-controller="Skill"
       asp-action="SkillList"
       class="@baseClass @(currentController == "Skill" ? activeClass : inactiveClass)">

        <span class="material-symbols-outlined group-hover:text-primary transition-colors">code</span>
        <span class="text-sm font-medium group-hover:text-slate-900 dark:group-hover:text-white">Yeteneklerim</span>
    </a>

    <a asp-controller="Experience"
       asp-action="ExperienceList"
       class="@baseClass @(currentController == "Experience" ? activeClass : inactiveClass)">

        <span class="material-symbols-outlined group-hover:text-primary transition-colors">history_edu</span>
        <span class="text-sm font-medium group-hover:text-slate-900 dark:group-hover:text-white">Deneyimlerim</span>
    </a>

    <a href="#"
       class="@baseClass @inactiveClass">
        <span class="material-symbols-outlined group-hover:text-primary transition-colors">mail</span>
        <span class="text-sm font-medium group-hover:text-slate-900 dark:group-hover:text-white">Mesajlar</span>
        <span class="ml-auto flex h-5 w-5 items-center justify-center rounded-full bg-primary text-[10px] font-bold text-white">3</span>
    </a>

    <a asp-controller="Education"
       asp-action="EducationList"
       class="@baseClass @(currentController == "Education" ? activeClass : inactiveClass)">

        <span class="material-symbols-outlined transition-colors" style="color: inherit;">school</span>
        <span class="text-sm font-medium group-hover:text-slate-900 dark:group-hover:text-white">Eğitim</span>
    </a>

    <a asp-controller="About"
       asp-action="AboutList"
       class="@baseClass @(currentController == "About" ? activeClass : inactiveClass)">

        <span class="material-symbols-outlined transition-colors" style="color: inherit;">person</span>
        <span class="text-sm font-medium group-hover:text-slate-900 dark:group-hover:text-white">Hakkımda</span>
    </a>

</nav>